
<%= form_tag charges_path do %>
<script src="https://checkout.stripe.com/v2/checkout.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.js"></script>



  <button id="customButton" class="btn btn-primary btn-lg btn-block">
  	Make Payment: $100 
  </button>

  <script>
    $('#customButton').click(function(){
      var token = function(res){
        var $input = $('<input type=hidden name=stripeToken />').val(res.id);
        $('form').append($input).submit();
      };
      // SHOULD THE KEY BE HARDCODED LIKE THIS?
      StripeCheckout.open({
        key:         'pk_test_CuTDYTu4sHFGgwEynCnXWkmL',
        address:     false,
        amount:      10,
        currency:    'usd',
        name:        'New Job Posting',
        description: 'Posting a job for remote code ninja',
        panelLabel:  'Checkout',
        token:       token,
      });

      return false;
    });
  </script>

  <% end %>