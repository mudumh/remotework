
<div class= "container">
	<div class= "row">
    <%= simple_form_for @company,
                :html => { :multipart => true } do |f| %>
      <%= render 'companies/errors' %>
      <%= f.label "About the Company", class: 'subsectionheader'%>
      
      <%= f.input :name, label: 'Company Name',wrapper_html: { class: 'form-group' },input_html: { class: 'form-control' }  %>
      
	    
      <%= f.input :url, as: :text, label: 'Company Website',wrapper_html: { class: 'form-group'  },input_html: { class: 'form-control ' }  %>
	    
      <%= f.input :headquarters, label: 'Headquarters ',wrapper_html: { class: 'form-group' },input_html: { class: 'form-control appinstructions' }  %>
  </div>  
  <%= f.submit 'Submit', class: 'btn btn-primary btn-lg btn-block'  %>
<% end %>
</div>
